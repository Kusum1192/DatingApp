<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_window_focused="true">
        <shape>
            <stroke android:color="@color/custom_theme_color" android:width="0.2dp" />
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_window_focused="false">
        <shape>
            <stroke android:color="@color/white" android:width="0.2dp"/>
            <corners android:radius="6dp"/>
            <solid android:color="@color/edit_bg_color"/>
        </shape>
    </item>
</selector>